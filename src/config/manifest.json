{
    "name": "recs2spotify",
    "description": "Simple extension that exports selected thread music recommendations from music recs without context facebook group",
    "version": "0.1.1",
    "permissions": [
        "contextMenus",
        "tabs",
        "identity",
        "storage",
        "activeTab",
        "declarativeContent"
    ],
    "content_scripts": [{
        "js": ["core.js"],
        "matches": ["<all_urls>"]
    }],
    "page_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "manifest_version": 2
}
